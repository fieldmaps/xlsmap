{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/app/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/data/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "*",
      "methods": ["POST", "PUT", "DELETE"],
      "rewrite": "/api/__render"
    }
  ],
  "navigationFallback": {
    "rewrite": "/api/__render"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=.referrer",
      "statusCode": 302
    }
  }
}
